# Repo / GitHub
# Required
GITHUB_TOKEN=ghp_replace_me
GITHUB_REPO=owner/repo
GITHUB_TIMEOUT_SEC=10

# Webhooks
# Optional (recommended for production webhooks)
GITHUB_WEBHOOK_SECRET=replace_with_secure_random_secret
SMEE_URL=

# CORS
# Comma-separated list of allowed frontend origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# Convex
# Filled by `npx convex dev` if used
CONVEX_DEPLOYMENT=
CONVEX_SITE_URL=
NEXT_PUBLIC_CONVEX_URL=
NEXT_PUBLIC_CONVEX_SITE_URL=

# App URL used by Convex Auth redirect validation
# Keep this aligned with the URL where you open the app in your browser.
SITE_URL=http://localhost:3000

# GitHub OAuth app credentials (for Sign in with GitHub)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# AI provider selection: auto | ollama | api | mock
AI_PROVIDER=auto

# Ollama (local inference)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# API-key provider (OpenAI-compatible /chat/completions endpoint)
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_MODEL=gpt-4o-mini
LLM_API_KEY=
LLM_API_TIMEOUT_SEC=20
